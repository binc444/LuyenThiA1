<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ntu.hieutm.appluyenthia1.controllers.RegisterController">
    <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #add8e6; -fx-padding: 20;">
        <!-- Tiêu đề -->
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #003399;" text="ĐĂNG KÝ TÀI KHOẢN THI" />

        <!-- Số báo danh -->
        <Label text="Số báo danh:" />
        <TextField fx:id="txtSoBaoDanh" maxWidth="300.0" prefWidth="300.0" />

        <!-- Họ tên -->
        <Label text="Họ và tên:" />
        <TextField fx:id="txtHoTen" maxWidth="300.0" prefWidth="300.0" />

        <!-- Ngày sinh -->
        <Label text="Ngày sinh:" />
        <TextField fx:id="txtNgaySinh" maxWidth="300.0" prefWidth="300.0" />

        <!-- Số CCCD -->
        <Label text="Số CCCD:" />
        <TextField fx:id="txtSoCCCD" maxWidth="300.0" prefWidth="300.0" />

        <!-- Địa chỉ -->
        <Label text="Địa chỉ:" />
        <TextField fx:id="txtDiaChi" maxWidth="300.0" prefWidth="300.0" />

        <!-- Mật khẩu -->
        <Label text="Mật khẩu:" />
        <TextField fx:id="txtMatKhau" maxWidth="300.0" prefWidth="300.0" />

        <!-- Nút đăng ký -->
        <Button fx:id="btnDangKy" onAction="#handleDangKy" prefWidth="200.0" style="-fx-background-color: #ffcc00;" text="Đăng ký" />
    </VBox>
</AnchorPane>
